<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".presentation.activities.destinations.AddNewTableForStudentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/radius_rectangle_time_table"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/saturday"
            android:textColor="@color/black"
            android:textSize="@dimen/small"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_higri_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/higri_date"
            android:textColor="@color/black"
            android:textSize="@dimen/vsmall"
            app:layout_constraintStart_toEndOf="@id/tv_day_name"
            app:layout_constraintTop_toBottomOf="@id/tv_day_name" />

        <TextView
            android:id="@+id/tv_regular_date"
            android:layout_width="46dp"
            android:layout_height="21dp"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/regular_date"
            android:textColor="@color/black"
            android:textSize="@dimen/vsmall"
            app:layout_constraintEnd_toStartOf="@id/tv_day_name"
            app:layout_constraintTop_toTopOf="@id/tv_higri_date" />

        <View
            android:id="@+id/view_under_line"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_higri_date" />

        <TextView
            android:id="@+id/tv_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/attendance"
            android:textColor="@color/black"
            android:textSize="@dimen/vsmall"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_under_line" />

<!--        <CheckBox-->
<!--            android:id="@+id/check_box"spinner_attendance-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:buttonTint="@color/green"-->
<!--            android:checked="false"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/tv_attendance"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/spinner_new_sura"-->
<!--            app:layout_constraintStart_toEndOf="@+id/txl1"-->
<!--            app:layout_constraintTop_toTopOf="@+id/tv_attendance" />-->

        <Spinner
            android:id="@+id/spinner_attendance"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/attendance_state"
            app:layout_constraintBottom_toBottomOf="@id/tv_attendance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txl1"
            app:layout_constraintTop_toTopOf="@+id/tv_attendance" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txl1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="@id/tv_attendance"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@id/spinner_new_sura"
            app:layout_constraintTop_toBottomOf="@+id/tv_attendance">

            <EditText
                android:id="@+id/new_sura_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الحفظ الجديد"
                android:inputType="textShortMessage"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_new_sura"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/txl1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txl1"
            app:layout_constraintTop_toTopOf="@+id/txl1"
            android:drawSelectorOnTop="true"
            android:entries="@array/rate"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txl2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="@id/tv_attendance"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@id/spinner_neer_past_sura"
            app:layout_constraintTop_toBottomOf="@+id/txl1">

            <EditText
                android:id="@+id/neer_past_sura_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الماضى القريب"
                android:inputType="textShortMessage"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_neer_past_sura"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txl2"
            app:layout_constraintEnd_toEndOf="@+id/spinner_new_sura"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/txl2"
            app:layout_constraintTop_toTopOf="@+id/txl2"
            android:drawSelectorOnTop="true"
            android:entries="@array/rate"
            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txl3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:hintEnabled="true"
            app:layout_constraintStart_toStartOf="@id/tv_attendance"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@id/spinner_far_past_sura"
            app:layout_constraintTop_toBottomOf="@+id/txl2">

            <EditText
                android:id="@+id/far_past_sura_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الماضى البعيد"
                android:inputType="textShortMessage"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_far_past_sura"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txl3"
            app:layout_constraintEnd_toEndOf="@+id/spinner_neer_past_sura"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/txl3"
            app:layout_constraintTop_toTopOf="@+id/txl3"
            android:drawSelectorOnTop="true"
            android:entries="@array/rate"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txl4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:hintEnabled="true"
            app:layout_constraintEnd_toStartOf="@id/spinner_meton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_attendance"
            app:layout_constraintTop_toBottomOf="@+id/txl3">

            <EditText
                android:id="@+id/meton_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="المتون"
                android:inputType="textShortMessage"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_meton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/txl4"
            app:layout_constraintEnd_toEndOf="@+id/spinner_far_past_sura"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txl4"
            app:layout_constraintTop_toTopOf="@+id/txl4"
            android:drawSelectorOnTop="true"
            android:entries="@array/rate"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/save"
        android:textSize="@dimen/small"
        android:textStyle="bold" />

</LinearLayout>