<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaymentFragment">

    <ImageView
        android:id="@+id/img_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_surface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_value_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/subscribe"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_surface"
        app:layout_constraintStart_toStartOf="@+id/img_surface"
        app:layout_constraintTop_toBottomOf="@id/img_surface" />

    <TextView
        android:id="@+id/tv_cannot_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/exception_pay"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_value_pay"
        app:layout_constraintStart_toStartOf="@+id/tv_value_pay"
        app:layout_constraintTop_toBottomOf="@id/tv_value_pay" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_can_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cannot_pay"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="@string/if_can_subsribe"
            android:textSize="18sp"
            android:padding="8dp"
            android:background="@drawable/radius_rectangle_time_table"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_vf_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/vf_cash"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_can_subscribe" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_vf_cash_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vf_cash">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center"
            android:text="@string/_01123845380"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textAlignment="center"
            android:background="@drawable/radius_rectangle_time_table"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_center_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/center_number"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_vf_cash_number" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_center_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_center_number">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="@string/_11111111"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textAlignment="center"
            android:background="@drawable/radius_rectangle_time_table"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_please_send_massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/carved_shape"
            android:padding="21dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="@string/pease_send_massage_to_adminstrator" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>