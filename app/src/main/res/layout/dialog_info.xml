<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingTop="8dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    tools:context=".home.ui.infoDialog">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_chiekh_info_profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/user_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/online_circle"
        app:layout_constraintBottom_toBottomOf="@+id/my_chiekh_info_profile_image"
        app:layout_constraintStart_toStartOf="@+id/my_chiekh_info_profile_image" />

    <LinearLayout
        android:id="@+id/dialog_info_parent_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/my_chiekh_info_profile_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/my_chiekh_info_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/my_chiekh_info_profile_image">

        <LinearLayout
            android:id="@+id/dialog_info_name_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/chiekh_name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_info_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="محمد خالد"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_info_class_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/class_room"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_info_class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="الثالثه"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_info_shiekh_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/shiekhName"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_info_shiekh_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="محمد عبد الغنى"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_info_phone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1"
            android:visibility="gone">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_info_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="011258891997"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_info_status_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_chiekh_info_tv_nameIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:drawableStart="@drawable/online_circle"
                android:drawablePadding="4dp"
                android:text="متاح الان"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/dialog_ino_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quran_ijazah"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_parent_ll"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_parent_ll"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_parent_ll" />

    <TextView
        android:id="@+id/my_chikh_info_tv_igaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="حفص عن عصم"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_ino_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_ino_title" />

    <LinearLayout
        android:id="@+id/dialog_info_student_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/dialog_ino_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_ino_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_ino_title"
        android:padding="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_info_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السبت"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_info_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="من 08.00 ص - الى 08.30 ص"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginStart="6dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>