<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/timeTableFragment"
        android:name="com.example.ertaqiwratel.presentation.activities.destinations.TimeTableFragment"
        android:label="fragment_time_table"
        tools:layout="@layout/fragment_time_table">
    </fragment>
    <fragment
        android:id="@+id/addNewTableForStudentFragment"
        android:name="com.example.ertaqiwratel.presentation.activities.destinations.AddNewTableForStudentFragment"
        android:label="fragment_add_new_table_for_student"
        tools:layout="@layout/fragment_add_new_table_for_student" />
    <fragment
        android:id="@+id/studentFragment"
        android:name="com.example.ertaqiwratel.presentation.activities.destinations.StudentFragment"
        android:label="fragment_student"
        tools:layout="@layout/fragment_student">
        <action
            android:id="@+id/action_studentFragment_to_addNewTableForStudentFragment"
            app:destination="@id/addNewTableForStudentFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.ertaqiwratel.presentation.activities.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.ertaqiwratel.presentation.activities.navUi.home.HomeFragment"
        android:label="@string/home_screen"
        tools:layout="@layout/fragment_student_home" >
        <action
            android:id="@+id/action_nav_home_to_myChiehkFrament"
            app:destination="@id/myChiehkFrament" />
    </fragment>
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.ertaqiwratel.presentation.activities.navUi.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragmnet_profile" />
    <fragment
        android:id="@+id/nav_extra"
        android:name="com.example.ertaqiwratel.presentation.activities.navUi.extra.ExtraSessionFragment"
        android:label="@string/extra_session"
        tools:layout="@layout/fragment_extra_session" />
    <fragment
        android:id="@+id/nav_admin"
        android:name="com.example.ertaqiwratel.presentation.activities.navUi.admin.AdminChatFragment"
        android:label="@string/administration"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/myChiehkFrament"
        android:label=""
        android:name="com.example.ertaqiwratel.presentation.activities.MyChiehkFragment"
        tools:layout="@layout/fragment_my_chiehk"
        >
        <action
            android:id="@+id/action_myChiehkFrament_to_myChiekhInfo"
            app:destination="@id/chiehk_info_dialog"
            app:popUpToInclusive="true" />

    </fragment>

    <dialog
        android:id="@+id/chiehk_info_dialog"
        android:name="com.example.ertaqiwratel.presentation.activities.ChiekhInfoDialog"
        tools:layout="@layout/dialog_chiekh_info" />

</navigation>